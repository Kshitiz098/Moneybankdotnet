@page "/register"
@inject NavigationManager Navigation
@inject JsonDataService<ModelList> DataStoreService
@inject MoneyBanks.Service.AuthenticationService AuthenticationService

<h3>Join Us</h3>

<div class="register-page">
    <form class="register-form" @onsubmit="HandleRegister">
        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" @bind="NewUser.UserName" class="form-control" placeholder="Enter your username" />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" @bind="NewUser.UserPassword" type="password" class="form-control" placeholder="Enter a strong password" />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input id="email" @bind="NewUser.UserEmail" type="email" class="form-control" placeholder="Enter your email address" />
        </div>

        <div class="form-group">
            <label for="preferredCurrency">Preferred Currency</label>
            <select id="preferredCurrency" @bind="NewUser.PreferredCurrency" class="form-control">
                <option value="USD">USD</option>
                <option value="EUR">EUR</option>
                <option value="INR">INR</option>
                <option value="NPR">NPR</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success btn-block">Register</button>
    </form>

    <div class="mt-3 text-center">
        <span>Already have an account?</span>
        <button class="btn btn-link" @onclick="GoToLoginPage">Login</button>
    </div>
</div>

<p class="error-message">@ErrorMessage</p>

<style>
    .register-page {
        max-width: 400px;
        margin: auto;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .register-form .form-group {
        margin-bottom: 15px;
    }

    .register-form .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
    }

    .btn-block {
        width: 100%;
    }

    .error-message {
        color: red;
        text-align: center;
        margin-top: 10px;
    }
</style>

